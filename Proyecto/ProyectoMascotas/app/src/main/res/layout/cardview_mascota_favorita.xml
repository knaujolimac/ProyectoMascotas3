<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascotaFavorito"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_column="1"
            android:layout_row="0"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgFotoFavorito"
                android:layout_marginTop="@dimen/top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gatoa"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/left"
            android:layout_column="1"
            android:layout_row="2">

            <TextView
                android:id="@+id/tvNombreMFavCv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombre_mascota"
                android:textSize="@dimen/nombre_mascota"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_column="1"
            android:layout_row="2">

            <TextView
                android:id="@+id/tvCantLMFavCv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cant_likes"
                android:textSize="@dimen/likes_mascota"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/imgLikesFavCv"
                android:layout_width="@dimen/hueso"
                android:layout_height="@dimen/hueso"
                android:layout_marginLeft="@dimen/left"
                android:layout_marginRight="@dimen/left"
                android:src="@drawable/huesolike"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout android:layout_marginTop="@dimen/top" android:layout_column="1"
            android:layout_row="3"></LinearLayout>
    </GridLayout>
</android.support.v7.widget.CardView>
